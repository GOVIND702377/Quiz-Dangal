###############################################
# Frontend environment (safe to expose)
# Copy this file to .env.local and fill values.
# .gitignore already prevents committing .env* files.
###############################################

# Supabase (client)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Web Push (VAPID public key for browser)
VITE_VAPID_PUBLIC_KEY=

# Optional: APK download button in PWA
# Example: https://quizdangal.com/app.apk
VITE_DOWNLOAD_URL=
# Set to 'true' to skip probing the URL with a HEAD request
VITE_DISABLE_APK_PROBE=false

# Optional: bypass auth locally (UI only)
# 0 = disabled (default), 1 = enabled
VITE_BYPASS_AUTH=0


###############################################
# Server-only secrets (DO NOT put in .env.local used by Vite)
# Use these for backend/Edge Functions only and store as project/service secrets
###############################################

# Supabase service (server)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Web Push (server keys)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
CONTACT_EMAIL=mailto:admin@quizdangal.com